{
  "name": "grammatically",
  "version": "1.0.0",
  "description": "Grammatically - application for learning english",
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savtym/grammatically.git"
  },
  "engines": {
    "node": "8.9.1"
  },
  "keywords": [
    "grammatically",
    "english"
  ],
