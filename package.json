  "license": "MIT",
  "bugs": {
    "url": "https://github.com/savtym/grammatically/issues"
  },
  "homepage": "https://github.com/savtym/grammatically#readme",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-bearer-token": "^2.2.0",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.4.3",
    "cors": "^2.8.4"
  },
  "scripts": {
    "heroku-postbuild": "npm install",
    "start": "NODE_PATH=src babel-node src/index.js",
    "start:dev": "NODE_PATH=src nodemon src/index.js --exec babel-node",
    "db:refresh": "npm-run-all db:reset db:up",
    "db:reset": "db-migrate -m migrations --config src/config/db.json reset",
    "db:up": "db-migrate -m migrations --config src/config/db.json up"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "db-migrate-pg": "^0.4.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3"
  }
}
